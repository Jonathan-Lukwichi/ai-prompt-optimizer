{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Run Streamlit App",
            "type": "shell",
            "command": "streamlit",
            "args": [
                "run",
                "home.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "echo": true,
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "üì¶ Install Dependencies",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "‚úÖ Check Setup",
            "type": "shell",
            "command": "python",
            "args": [
                "check_setup.py"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "üßπ Clean Cache",
            "type": "shell",
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "-Recurse",
                    "-Force",
                    "-ErrorAction",
                    "SilentlyContinue",
                    "__pycache__,",
                    "*.pyc,",
                    ".pytest_cache,",
                    "data/prompts.db"
                ]
            },
            "linux": {
                "command": "find",
                "args": [
                    ".",
                    "-type",
                    "d",
                    "-name",
                    "__pycache__",
                    "-exec",
                    "rm",
                    "-rf",
                    "{}",
                    "+"
                ]
            },
            "osx": {
                "command": "find",
                "args": [
                    ".",
                    "-type",
                    "d",
                    "-name",
                    "__pycache__",
                    "-exec",
                    "rm",
                    "-rf",
                    "{}",
                    "+"
                ]
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "üîÑ Restart Streamlit",
            "type": "shell",
            "command": "echo",
            "args": [
                "Press Ctrl+C in terminal, then run 'üöÄ Run Streamlit App' task"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "üåê Open in Browser",
            "type": "shell",
            "windows": {
                "command": "start",
                "args": [
                    "http://localhost:8502"
                ]
            },
            "linux": {
                "command": "xdg-open",
                "args": [
                    "http://localhost:8502"
                ]
            },
            "osx": {
                "command": "open",
                "args": [
                    "http://localhost:8502"
                ]
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }
    ]
}
